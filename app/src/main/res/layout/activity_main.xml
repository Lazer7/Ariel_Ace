<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lazer.myapplication.MainActivity"
    android:background="@drawable/prisma"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:id="@+id/fragment_container"
        android:focusable="false"
        android:name="lazer.myapplication.Customize"
        tools:layout="@layout/newoptionmenu"

        android:visibility="visible"
        android:importantForAccessibility="yes">
    </RelativeLayout >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/floor_menu"
        android:orientation="horizontal"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ariel Ace"
        android:id="@+id/GameName"
        android:textSize="45dp"
        android:textColor="#3346a3"
        android:textStyle="bold"
        android:singleLine="false"
        android:clickable="false"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/Play"
        android:height="100dp"
        android:width="500dp"
        android:layout_below="@+id/GameName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="#e30f0f"
        android:textSize="50dp"
        android:singleLine="false"
        android:background="#4945c8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customize"
        android:id="@+id/Customize"
        android:width="200dp"
        android:height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="#3b51d1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option"
        android:id="@+id/OptionMenu"
        android:layout_marginBottom="29dp"
        android:height="50dp"
        android:width="200dp"
        android:layout_above="@+id/Customize"
        android:layout_centerHorizontal="true"
        android:background="#3b51d1" />

    </RelativeLayout>
</RelativeLayout>
